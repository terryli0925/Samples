<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.terry.samples.fragment.ServiceFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start one-time service"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/start_periodic_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start periodic service"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/stop_periodic_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop periodic service"
            android:textAllCaps="false"/>

    </LinearLayout>
</RelativeLayout>
